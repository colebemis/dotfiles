#!/bin/bash

# WARNING:
# Existing files could be overwritten as a result of this script

BASEDIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

function symlink {
  local source="${BASEDIR}/${1}"
  local target=$2

  ln -fs $source $target
}

# tmux
symlink tmux.conf ~/.tmux.conf

# git
symlink gitconfig ~/.gitconfig

# zsh
symlink zshrc ~/.zshrc

